<section class="container">
  <h3 class="muscle-name">{{muscle.name}}</h3>
  <section class="flex-row justify-center">
    {{#each muscle.exercises as |exercise|}}
    {{> exercise-details}}
    {{/each}}
  </section>
</section>

        <section id="exercise-intro" class="section">
            <div class="container">
                <h2 class="title is-2">Workouts</h2>
                <div class="columns is-centered">
                <!-- First card -->
                    <div class="column is-one-third">
                        <div class="card">
                            <div class="card-image">
                              <figure class="image is-4by3">
                                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                              </figure>
                            </div>
                            <div class="card-content card-workout-content">
                              <div class="media">
                                <div class="media-left">
                                    <figure class="circle">
                                        <p>4</p>
                                        <p>Steps</p>
                                    </figure>
                                </div>
                                <div class="media-content">
                                  <h3 class="title is-3">Bicep Curl</h3>
                                </div>
                              </div>
                          
                              <div class="content workout-content">
                                <h4 class="title is-5">Muscle Group:</h4>
                                <p>{{muscle.name}}</p>
                                <h4 class="title is-5">Category:</h4>
                                <p>Some category</p>
                                <h4 class="title is-5">Equipment:</h4>
                                <p>Dumbell</p>
                                    <div>
                                        <button class="button button-classic">
                                        <span>View Exercise</span>
                                        </button>
                                    </div>
                              </div>
                            </div>
                          </div>
                    </div>         
                </div>
            </div>
        </section>