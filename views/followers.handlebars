<div class="container">
    <div class="columns">
        <!--Col 1-->
        <div class="column is-one-half">
            <!--Profile-->
            <div class="row">
                <nav id="followersList" class="panel card-formatting">
                    <p class="panel-heading">
                        Profile
                    </p>
                    <div id="profile" class="columns" data-userid="{{user.id}}">
                        <div class="column is-one-quarter">
                            <img src={{user.image}} alt="User Image">
                        </div>
                        <div class="column is-three-quarters">
                            <p>First Name: <span>{{user.firstName}}</span></p>
                            <p>Last Name: <span>{{user.lastName}}</span></p>
                            <p>Email: <span>{{user.email}}</span></p>
                        </div>
                    </div>
                </nav>
            </div>

            <div class="row">
                <div class="column">
                    <nav id="followersList" class="panel card-formatting">
                        <p class="panel-heading">
                            Following
                        <ul class="ss-list-group">
                            {{#each this.followMap as |this|}}
                            {{> followers-details-remove}}
                            {{/each}}
                        </ul>
                        </p>
                    </nav>
                </div>
            </div>
        </div>

        <!--Col 2-->
        <div class="column is-one-half">
            <div id="usersList" class="column">
                <nav class="panel card-formatting">
                    <p class="panel-heading">
                        Users
                    <ul class="ss-list-group">
                        {{#each this.allUsers as |this|}}
                            {{> followers-details-add}}
                        {{/each}}
                    </ul>
                    </p>
                </nav>
            </div>
        </div>
    </div>
</div>